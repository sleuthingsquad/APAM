var termsClicked = function() {
	document.body.style.border = "7px solid rgb(255, 240, 181)";

	document.body.textContent = "";
	var termsHead = document.createElement("h1");
	termsHead.textContent = "Terms and Policies";
	document.body.appendChild(termsHead);

	var safety = document.createElement("h2");
	safety.textContent = "Safety:";
	document.body.appendChild(safety);

	var text7 = document.createElement("p");
	text7.textContent = "Ut enim ad minima veniam, quis nostrum[d] exercitationem ullam corporis suscipit laboriosam, nisi ut aliquid ex ea commodi consequatur? [D]Quis autem vel eum i[r]ure reprehenderit. Qui in ea voluptate velit esse, quam nihil molestiae consequatur, vel illum, qui dolorem eum fugiat, quo voluptas nulla pariatur. Ut enim ad minim veniam, quis nostrud exercitation.";
	document.body.appendChild(text7);


	var rules = document.createElement("h2");
	rules.textContent = "Rules:";
	document.body.appendChild(rules);

	var options = ["Itaque earum rerum hic tenetur.",
"A sapiente delectus, ut aut reiciendis.",
"Voluptatibus maiores alias consequatur aut perferendis.",
"Doloribus asperiores repellat.",
"emporibus autem quibusdam et aut officiis debitis aut rerum necessitatibus."];	

	var ruleList = document.createElement("ol");
	var listNum = 0
	
	for (var i = 0; i < options.length; i++) {
        var listItem = document.createElement("li");
        listItem.textContent = options[i];
        ruleList.appendChild(listItem);
      }
	
	document.body.appendChild(ruleList);

	document.body.style.padding = "25px";
}

terms.addEventListener("click", termsClicked);
