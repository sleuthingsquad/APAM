var logIn = document.getElementById("loglink");
var about = document.getElementById("aboutus");
var terms = document.getElementById("tandp");

var logClicked = function() {
	document.body.style.border = "7px solid rgb(255, 240, 181)";
	document.body.textContent = "";

	var logHead = document.createElement("h1");
	logHead.textContent = "Login and Signup";
	document.body.appendChild(logHead);

	var SignSub = document.createElement("h3");
	SignSub.textContent = "Sign up";
	document.body.appendChild(SignSub);

	var logSub = document.createElement("h3");
	logSub.textContent = "Login";
	document.body.appendChild(logSub);
	logSub.style.position = "relative";
	logSub.style.left = "550px";
	logSub.style.bottom = "40px";

	var emailIn = document.createElement("label");
	emailIn.textContent = "Email-id:  ";
	document.body.appendChild(emailIn);

	var email_Id = document.createElement("input");
	document.body.appendChild(email_Id)

	document.body.appendChild(document.createElement("br"));
	document.body.appendChild(document.createElement("br"));

	var otp = document.createElement("button");
	otp.textContent = "Send OTP";
	document.body.appendChild(otp);

	var email_input = document.createElement("label");
	email_input.textContent = "Email-id:  ";
	document.body.appendChild(email_input);
	email_input.style.position = "relative";
	email_input.style.left = "472px";
	email_input.style.bottom = "40px";

	var email = document.createElement("input");
	document.body.appendChild(email)
	email.style.position = "relative";
	email.style.left = "472px";
	email.style.bottom = "40px";

	document.body.appendChild(document.createElement("br"));
	document.body.appendChild(document.createElement("br"));

	var pass = document.createElement("label");
	pass.textContent = "Password:  ";
	document.body.appendChild(pass);
	
	pass.style.position = "relative";
	pass.style.left = "550px";
	pass.style.bottom = "40px";

	var password = document.createElement("input");
	document.body.appendChild(password)
	password.style.position = "relative";
	password.style.left = "550px";
	password.style.bottom = "40px";

	var forgot = document.createElement("p");
	forgot.textContent = "Forgot Password";
	document.body.appendChild(forgot);
	forgot.style.color = "rgb(233, 250, 0)";
	forgot.style.position = "relative";
	forgot.style.left = "575px";
	forgot.style.bottom = "40px";

	var sent = function() {
		var label = document.createElement("label");
		label.textContent = "OTP: ";
		document.body.appendChild(label)

		var input = document.createElement("input");
		document.body.appendChild(input)

		label.style.marginTop = "-140px"
		input.style.marginTop = "-140px"
	}

	otp.addEventListener("click", sent)

	var forgot_pas = function() {
		email = email.value
		if (email === '') {
			var enter_email = document.createElement("p")
			enter_email.textContent = "Please enter your email-id so we can send you the new password!";
			document.body.appendChild(enter_email)
			enter_email.style.position = "relative";
			enter_email.style.left = "575px";
			enter_email.style.bottom = "40px";
			enter_email.style.color = "rgb(233, 250, 0)";
		}
		else if (email === "undefined") {
			var enter_email = document.createElement("p")
			enter_email.textContent = "Please enter your email-id so we can send you the new password!";
			document.body.appendChild(enter_email)
			enter_email.style.position = "relative";
			enter_email.style.left = "575px";
			enter_email.style.bottom = "40px";
			enter_email.style.color = "rgb(233, 250, 0)";
		}
		else {
			var we_sent = document.createElement("p")
			we_sent.textContent = "We sent you the new password. Please enter it in the password input box."
			document.body.appendChild(we_sent)
			we_sent.style.position = "relative";
			we_sent.style.left = "575px";
			we_sent.style.bottom = "40px";
			we_sent.style.color = "rgb(233, 250, 0)";
		}
}
	forgot.addEventListener("click", forgot_pas)
}

logIn.addEventListener("click", logClicked);

